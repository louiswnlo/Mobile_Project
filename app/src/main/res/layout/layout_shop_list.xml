<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bg_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shop_img_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/discount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bg_img"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="30% OFF!"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="10sp"
        android:background="#f04343"/>

    <TextView
        android:id="@+id/booked_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/discount_txt"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="Booked 3280 times"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="10sp"
        android:background="#bd9fed"/>

    <ImageView
        android:id="@+id/logo_img"
        android:background="#fff"
        android:layout_width="40dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/bg_img"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"/>

    <RatingBar
        android:id="@+id/rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bg_img"
        android:layout_toRightOf="@id/logo_img"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.1"
        android:rating="4.5"
        android:progressTint="#fff"
        />

    <TextView
        android:id="@+id/shopname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beauty Parade"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/bg_img"
        android:layout_alignLeft="@+id/rating_bar"
        android:layout_marginBottom="30dp"
        />

</RelativeLayout>